<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Wib_Percustdiscount>
            <version>0.1.1</version>
        </Wib_Percustdiscount>
    </modules>

    <global>
        <models>
            <wbdispatcher>
                <class>Wib_Percustdiscount_Model</class>
            </wbdispatcher>
        </models>
        
        <helpers>
            <percustdiscount>
                <class>Wib_Percustdiscount_Helper</class>
            </percustdiscount>
        </helpers>

        <events>
            <catalog_product_get_final_price>
                <observers>
                    <Wib_Percustdiscount_price_observer>
                        <type>singleton</type>
                        <class>Wib_Percustdiscount_Model_Observer</class>
                        <method>get_final_price</method>
                    </Wib_Percustdiscount_price_observer>
                </observers>
            </catalog_product_get_final_price>

            <catalog_product_collection_load_after>
                <observers>
                    <Wib_Percustdiscount_price_observer>
                        <type>model</type>
                        <class>Wib_Percustdiscount_Model_Observer</class>
                        <method>get_final_list_price</method>
                    </Wib_Percustdiscount_price_observer>
                </observers>
            </catalog_product_collection_load_after>
        </events>
        <resources>
            <Percustdiscount_setup>
                <setup>
                    <module>Wib_Percustdiscount</module>
                    <class>Wib_Percustdiscount_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </Percustdiscount_setup>
            <Percustdiscount_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </Percustdiscount_write>
            <Percustdiscount_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </Percustdiscount_read>
        </resources>
    </global>

    <frontend>
        <routers>
            <percustdiscount>
                <use>standard</use>
                <args>
                    <module>Wib_Percustdiscount</module>
                    <frontname>percustdiscount</frontname>
                </args>
            </percustdiscount>
        </routers>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <percustdiscount_options>
                                            <title>Store Settings Module Section</title>
                                        </percustdiscount_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>